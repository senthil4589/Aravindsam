<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/title_bar_color" >

            <ImageView
                android:id="@+id/back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:contentDescription="@string/image_des"
                android:src="@drawable/white_backbutton" />

            <com.group.nearme.util.MyTextView
                
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/back"
                android:text="Create Group"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="14dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:id="@+id/college_school"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginRight="7dp"
                    android:layout_weight="1" >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/image_des"
                        android:scaleType="fitXY"
                        android:src="@drawable/group_image" />

                    <TextView
                        android:id="@+id/collegeTxt"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_alignParentBottom="true"
                        android:background="#F0A125"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:text="@string/college_school_groups"
                        android:textColor="@color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/interest"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="7dp"
                    android:layout_weight="1" >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/image_des"
                        android:scaleType="fitXY"
                        android:src="@drawable/group_image" />

                    <TextView
                        android:id="@+id/interestTxt"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_alignParentBottom="true"
                        android:background="#639837"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:text="@string/interests_groups"
                        android:textColor="@color/white" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginTop="14dp"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:id="@+id/activity"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginRight="7dp"
                    android:layout_weight="1" >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/image_des"
                        android:scaleType="fitXY"
                        android:src="@drawable/group_image" />

                    <TextView
                        android:id="@+id/activityTxt"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_alignParentBottom="true"
                        android:background="#E03C35"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:text="@string/activity_groups"
                        android:textColor="@color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/event_conferences"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="7dp"
                    android:layout_weight="1" >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/image_des"
                        android:scaleType="fitXY"
                        android:src="@drawable/group_image" />

                    <TextView
                        android:id="@+id/eventTxt"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_alignParentBottom="true"
                        android:background="#738995"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:text="@string/event_conference_groups"
                        android:textColor="@color/white" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginTop="14dp"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:id="@+id/photo_sharing"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginRight="7dp"
                    android:layout_weight="1" >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/image_des"
                        android:scaleType="fitXY"
                        android:src="@drawable/group_image" />

                    <TextView
                        android:id="@+id/photoSharingTxt"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_alignParentBottom="true"
                        android:background="#EB467C"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:text="@string/photo_sharing_groups"
                        android:textColor="@color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/friends_family"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="7dp"
                    android:layout_weight="1" >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/image_des"
                        android:scaleType="fitXY"
                        android:src="@drawable/group_image" />

                    <TextView
                        android:id="@+id/friendsTxt"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_alignParentBottom="true"
                        android:background="#E9684E"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:text="@string/friends_family_groups"
                        android:textColor="@color/white" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginTop="14dp"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:id="@+id/work_office"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginRight="7dp"
                    android:layout_weight="1" >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/image_des"
                        android:scaleType="fitXY"
                        android:src="@drawable/group_image" />

                    <TextView
                        android:id="@+id/workTxt"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_alignParentBottom="true"
                        android:background="#F0A125"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:text="@string/work_offices_groups"
                        android:textColor="@color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/apartments_condos"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="7dp"
                    android:layout_weight="1" >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/image_des"
                        android:scaleType="fitXY"
                        android:src="@drawable/group_image" />

                    <TextView
                        android:id="@+id/apartmentTxt"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_alignParentBottom="true"
                        android:background="#F0A125"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:text="@string/apartment_condos_groups"
                        android:textColor="@color/white" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginTop="14dp"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:id="@+id/buy_sell_trade"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginRight="7dp"
                    android:layout_weight="1" >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/image_des"
                        android:scaleType="fitXY"
                        android:src="@drawable/group_image" />

                    <TextView
                        android:id="@+id/buySellTxt"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_alignParentBottom="true"
                        android:background="#F0A125"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:text="@string/work_offices_groups"
                        android:textColor="@color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/invisible_layout"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="7dp"
                    android:layout_weight="1"
                    android:visibility="invisible" >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/image_des"
                        android:scaleType="fitXY"
                        android:src="@drawable/group_image" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_alignParentBottom="true"
                        android:background="#F0A125"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:text="@string/apartment_condos_groups"
                        android:textColor="@color/white" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>