<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/borders"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/text_post_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <FrameLayout
            android:id="@+id/text_post"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@drawable/circle2" >

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:background="#C64FC5"
                android:contentDescription="@string/image_des"
                android:src="@drawable/text" />
        </FrameLayout>

        <TextView
            android:id="@+id/text"
            style="@style/custom_dialog_content"
            android:layout_toRightOf="@+id/text_post"
            android:text="Post Text or Link" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:background="@drawable/listview_divider_gradient" />

    <RelativeLayout
        android:id="@+id/camera_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <FrameLayout
            android:id="@+id/camera"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@drawable/pink_circle" >

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:background="#E4007D"
                android:contentDescription="@string/image_des"
                android:src="@drawable/take_photo" />
        </FrameLayout>

        <TextView
            android:id="@+id/take_photo"
            style="@style/custom_dialog_content"
            android:layout_toRightOf="@+id/camera"
            android:text="Take a photo" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:background="@drawable/listview_divider_gradient" />

    <RelativeLayout
        android:id="@+id/gallery_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <FrameLayout
            android:id="@+id/gallery"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@drawable/circle1" >

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:background="#0ABBB5"
                android:contentDescription="@string/image_des"
                android:src="@drawable/photo" />
        </FrameLayout>

        <TextView
            android:id="@+id/from_gallery"
            style="@style/custom_dialog_content"
            android:layout_toRightOf="@+id/gallery"
            android:text="Choose a photo" />
    </RelativeLayout>
     <View
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:background="@drawable/listview_divider_gradient" />
    
  <RelativeLayout
        android:id="@+id/video_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <FrameLayout
            android:id="@+id/video"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@drawable/circle4" >

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:background="#E98B11"
                android:contentDescription="@string/image_des"
                android:src="@drawable/play_image" />
        </FrameLayout>

        <TextView
            android:id="@+id/upload_video"
            style="@style/custom_dialog_content"
            android:layout_toRightOf="@+id/video"
            android:text="Upload video" />
    </RelativeLayout>
     <View
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:background="@drawable/listview_divider_gradient" />
  
      <RelativeLayout
        android:id="@+id/gif_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <FrameLayout
            android:id="@+id/gif"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@drawable/circle3" >

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:background="#3589EC"
                android:contentDescription="@string/image_des"
                android:src="@drawable/gif_play" />
        </FrameLayout>

        <TextView
            android:id="@+id/upload_gif"
            style="@style/custom_dialog_content"
            android:layout_toRightOf="@+id/gif"
            android:text="Upload GIF" />
    </RelativeLayout>

    <View
        android:id="@+id/product_line"
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:background="@drawable/listview_divider_gradient"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/product_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <FrameLayout
            android:id="@+id/product"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@drawable/circle5" >

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:background="#DCCC38"
                android:contentDescription="@string/image_des"
                android:src="@drawable/gif_play" />
        </FrameLayout>

        <TextView
            android:id="@+id/compose_product"
            style="@style/custom_dialog_content"
            android:layout_toRightOf="@+id/product"
            android:text="Product" />
    </RelativeLayout>
  
</LinearLayout>