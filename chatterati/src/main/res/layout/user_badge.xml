<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="5dp" >
        
        
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/title_bar_color" >

        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:contentDescription="@string/image_des"
            android:src="@drawable/white_backbutton" />

        <com.group.nearme.util.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/back"
            android:text="Star Rating"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white" />
    </RelativeLayout>

        

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:paddingBottom="15dp" >

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/user_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:contentDescription="@string/image_des"
                android:scaleType="fitXY"
                android:src="@drawable/group_image" />

            <com.group.nearme.util.MyTextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/user_image"
                android:background="#00000000"
                android:layout_marginBottom="10dp"
                android:layout_above="@+id/star_layout"
                android:textSize="16sp"
                android:textColor="@color/black" />
            
            <RelativeLayout
                android:id="@+id/star_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:layout_toRightOf="@+id/user_image"
                     android:layout_alignParentBottom="true"
                     >
                    
                    <ImageView
                        android:id="@+id/star1"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/image_des"
                        android:src="@drawable/orange_filled_star" />

                    <ImageView
                        android:id="@+id/star2"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/star1"
                        android:layout_marginLeft="5dp"
                        android:contentDescription="@string/image_des"
                        android:src="@drawable/orange_empty_star" />

                    <ImageView
                        android:id="@+id/star3"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/star2"
                        android:layout_marginLeft="5dp"
                        android:contentDescription="@string/image_des"
                        android:src="@drawable/orange_empty_star" />

                    <ImageView
                        android:id="@+id/star4"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/star3"
                        android:layout_marginLeft="5dp"
                        android:contentDescription="@string/image_des"
                        android:src="@drawable/orange_empty_star" />
                     <ImageView
                        android:id="@+id/star5"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/star4"
                        android:layout_marginLeft="5dp"
                        android:contentDescription="@string/image_des"
                        android:src="@drawable/orange_empty_star" />
                    
                </RelativeLayout>
            
        </RelativeLayout>
        
        <View 
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#E4E4E4"/> 
            
            <com.group.nearme.util.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            android:text="@string/user_score1"
            android:textColor="@color/black"
            android:textStyle="bold" />
       

        <com.group.nearme.util.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/user_score2"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="15dp"
            android:text="@string/user_score3"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <com.group.nearme.util.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/user_score4"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black" />

