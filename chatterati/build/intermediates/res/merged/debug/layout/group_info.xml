<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/title_bar_color" >

            <ImageView
                android:id="@+id/back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:contentDescription="@string/image_des"
                android:src="@drawable/white_backbutton" />

            <RelativeLayout
                android:id="@+id/group_info_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/back" >

                <com.parse.ParseImageView
                    android:id="@+id/group_image"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/image_des"
                    android:scaleType="fitXY" />

                <com.group.nearme.util.MyTextView
                    android:id="@+id/group_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/group_image"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </RelativeLayout>
        </RelativeLayout>

      <!--   <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black" /> -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp" >
            
             <com.group.nearme.util.MyTextView
                android:id="@+id/my_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="MY"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#90CAF3" />
           
            <com.group.nearme.util.MyTextView
                android:id="@+id/my_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="25dp"
                android:text="My Posts"
                 android:textSize="15dp"
                 android:paddingTop="5dp"
                android:textColor="@color/black" />
             <View 
                 android:id="@+id/mypost_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:visibility="gone"
                android:background="@drawable/listview_divider_gradient"/>
           
             
             <com.group.nearme.util.MyTextView
                android:id="@+id/group_info_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="GROUP INFO"
                 android:textSize="15dp"
                 android:textStyle="bold"
                android:textColor="#90CAF3" />
             
                <com.group.nearme.util.MyTextView
                android:id="@+id/group_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="25dp"
                android:text="Group Profile"
                 android:textSize="15dp"
                 android:paddingTop="5dp"
                android:textColor="@color/black" />
            <View 
                android:id="@+id/profile_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:visibility="gone"
                android:background="@drawable/listview_divider_gradient"/>

            <com.group.nearme.util.MyTextView
                android:id="@+id/group_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="25dp"
                android:text="Group Location"
                 android:textSize="15dp"
                android:textColor="@color/black" />
             <View 
                 android:id="@+id/location_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:visibility="gone"
                android:background="@drawable/listview_divider_gradient"/>
            
             
             
             

                       <com.group.nearme.util.MyTextView
                android:id="@+id/members"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="25dp"
                android:text="Group Members"
                 android:textSize="15dp"
                android:textColor="@color/black" />
              <View 
                  android:id="@+id/members_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:visibility="gone"
                android:background="@drawable/listview_divider_gradient"/>
              
              <com.group.nearme.util.MyTextView
                android:id="@+id/group_rules"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="25dp"
                android:text="Group Rules"
                 android:textSize="15dp"
                android:textColor="@color/black" />
             <View 
                 android:id="@+id/rules_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:visibility="gone"
                android:background="@drawable/listview_divider_gradient"/>
           
             
           
             

            <com.group.nearme.util.MyTextView
                android:id="@+id/group_access_permission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="ACCESS PERMISSIONS"
                 android:textSize="15dp"
                android:textColor="@color/black" />
             <View 
                 android:id="@+id/access_permission_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:visibility="gone"
                android:background="@drawable/listview_divider_gradient"/>
            

            <com.group.nearme.util.MyTextView
                android:id="@+id/invitation_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="INVITATION"
                 android:textSize="15dp"
                 android:textStyle="bold"
                android:textColor="#90CAF3" />
            
            <com.group.nearme.util.MyTextView
                android:id="@+id/invite_members"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="25dp"
                android:text="Invite Members"
                android:paddingTop="5dp"
                 android:textSize="15dp"
                android:textColor="@color/black" />
            
             <View 
                 android:id="@+id/invite_members_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:visibility="gone"
                android:background="@drawable/listview_divider_gradient"/>
             
             <com.group.nearme.util.MyTextView
                android:id="@+id/admin_settings_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="ADMIN SETTINGS"
                 android:textSize="15dp"
                 android:textStyle="bold"
                android:textColor="#90CAF3" />
             
                            <com.group.nearme.util.MyTextView
                android:id="@+id/group_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="25dp"
                android:text="Group Settings"
                 android:textSize="15dp"
                 android:paddingTop="5dp"
                android:textColor="@color/black" />
             <View 
                 android:id="@+id/group_settings_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:visibility="gone"
                android:background="@drawable/listview_divider_gradient"/>
            

            <com.group.nearme.util.MyTextView
                android:id="@+id/pending_approvals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="25dp"
                android:text="Pending Member Approval"
                 android:textSize="15dp"
                android:textColor="@color/black" />
             <View 
                 android:id="@+id/pending_approval_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:visibility="gone"
                android:background="@drawable/listview_divider_gradient"/>
             
             <com.group.nearme.util.MyTextView
                android:id="@+id/pending_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="25dp"
                android:text="Pending Posts"
                 android:textSize="15dp"
                android:textColor="@color/black" />
             <View 
                 android:id="@+id/pending_post_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:visibility="gone"
                android:background="@drawable/listview_divider_gradient"/>
           
            <com.group.nearme.util.MyTextView
                android:id="@+id/exit_group"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="25dp"
                android:paddingTop="10dp"
                android:text="@string/exit_group"
                 android:textSize="15dp"
                android:textColor="#C40401" />
             <View 
                 android:id="@+id/exit_group_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:visibility="gone"
                android:background="@drawable/listview_divider_gradient"/>
            
        </LinearLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>
</ScrollView>